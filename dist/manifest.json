{
    "manifest_version": 3,
    "name": "YouTubeConnect",
    "description": "A YouTube extension to make your life easier!",
    "version": "2.0",
    "action": {
        "default_icon": {
            "19": "img/logo.png",
            "38": "img/logo.png"
        },
        "default_title": "YouTubeConnect Settings",
        "default_popup": "options.html"
    },
    "icons": {
        "16": "img/logo.png",
        "48": "img/logo.png",
        "128": "img/logo.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/",
                "*://*.youtube.com/playlist*",
                "*://www.youtube.com/watch*"
            ],
            "js": [
                "js/csYouTube.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.genius.com/*"
            ],
            "js": [
                "js/csGenius.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.spotify.com/*"
            ],
            "js": [
                "js/csSpotify.js"
            ],
            "run_at": "document_start"
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/addButtons.js",
                "img/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}